{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://portfolio-theta-smoky-22.vercel.app"
        },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
